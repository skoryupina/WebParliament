<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="JpaPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <!--Поставщик постоянства-->
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <!--Единицы сохраняемости, управляемые EntityManager-->
        <class>com.skoryupina.entities.District</class>
        <properties>
            <property name="javax.persistence.schema-generation-action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation-target" value="database-and-scripts"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/partiesAndFractions" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="1" />
            <property name="javax.persistence.sql-load-script-source" value="insert.sql"/>
           <!-- <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>-->
        </properties>
    </persistence-unit>


    <persistence-unit name="TestJpaPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <!--Поставщик постоянства-->
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <!--Единицы сохраняемости, управляемые EntityManager-->
        <class>com.skoryupina.entities.District</class>
        <properties>
            <property name="javax.persistence.schema-generation-action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation-target" value="database"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/partiesAndFractionsTest" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="1" />
            <property name="javax.persistence.sql-load-script-source" value="resources/insert.sql"/>
            <!-- <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>-->
        </properties>
    </persistence-unit>
</persistence>